{
  "dependencies": {
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "react": "^17.0.0",
    "react-test-renderer": "^17.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx)$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ],
            "@babel/preset-react"
          ]
        }
      ]
    }
  }
}
